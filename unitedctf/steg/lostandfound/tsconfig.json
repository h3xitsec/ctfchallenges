{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noImplicitUseStrict": false,
        "outDir": "out/",
        "baseUrl": "src/"
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
